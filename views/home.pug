extends ./_shared/master

block content
    ul
        each post in postsLists
            li 
                div.postContainer
                    div.innerPostContainer
                        a.thumbnail(href='/r/' + post.subreaditName + '/post/' + post.id)
                            img(src=post.image)
                        div.postInfo
                            p.title
                                a(href='/r/' + post.subreaditName + '/post/' + post.id) #{post.name}
                            p.tagline
                                | Submitted by 
                                a(href="/user/" + post.userName) #{post.userName} 
                                | #{post.createdAgo} 
                                |   To: 
                                a(href='/r/' + post.subreaditName) #{post.subreaditName}  
                                =post.commentsCount
                                |   Comments 

