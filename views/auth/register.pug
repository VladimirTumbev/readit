extends ../_shared/master

block content
    .jumbotron
        != messages('../messages/message', locals)
        if validationErrors
            each validationError in validationErrors
                    div(class="alert alert-danger") #{validationError.msg}
            form.form-row.register(action="/user/register", method="post")
                div.col
                    label(for="userName")
                        | User Name:
                    input#userName.form-control(type="text", name="userName", placeholder="User Name")
                div.col
                    label(for="password")
                        | Password:
                    input#password.form-control(type="password", name="password", placeholder="Password")
                div.col
                    label(for="password")
                        | Confirm Password:
                    input#password.form-control(type="password", name="confirmPassword", placeholder="Confirm Password")
                div.col
                    label(for="avatar")
                        | Avatar:
                    input#avatar(type="url", name="avatar")
                div.col
                    input(type="submit", value="Register")
        else if errors
            each error, i in errors
                    div(class="alert alert-danger") #{error}
            form.form-row.register(action="/user/register", method="post")
                div.col
                    label(for="userName")
                        | User Name:
                    input#userName.form-control(type="text", name="userName", placeholder="User Name")
                div.col
                    label(for="password")
                        | Password:
                    input#password.form-control(type="password", name="password", placeholder="Password")
                div.col
                    label(for="password")
                        | Confirm Password:
                    input#password.form-control(type="password", name="confirmPassword", placeholder="Confirm Password")
                div.col
                    label(for="avatar")
                        | Avatar:
                    input#avatar(type="url", name="avatar")
                div.col
                    input(type="submit", value="Register")
